{% block title %}Série {{ program.name }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.name }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.name }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
