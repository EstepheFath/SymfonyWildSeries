{% extends 'base.html.twig' %}

{% block title %} All category's{% endblock %}

{% block body %}
<h1>Toutes les catégories de la table catégorie : </h1>
    {% for category in categorys | sort %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
            <a href="{{ path("category_show", {id: category.id}) }}">Voir les séries.</a>
        </div>

        {% else %}
            Aucune catégorie trouvée.
    {% endfor %}

      <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}